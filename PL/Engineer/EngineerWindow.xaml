<Window x:Class="PL.Engineer.EngineerWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EngineerWindow" Height="450" Width="800"
        DataContext="{Binding ContentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}">

    <Grid >
        <Grid.Resources>
            <Style TargetType="FrameworkElement">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Center" Width="350">
            <Label Content="Id"  HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Center" FontSize="20"/>
        </Grid>
        <TextBox Grid.Column="1" IsReadOnly="True" Foreground="Gray" HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Width="204" Height="40"/>

        <Label Content="Name" FontSize="20" HorizontalAlignment="Left" Margin="120,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="37" Width="63" Grid.RowSpan="2" />
        <TextBox Grid.Row="2" Grid.Column="1" 
      Text="{Binding CourseName, Mode=TwoWay, NotifyOnValidationError=true,  ValidatesOnExceptions=true}"  HorizontalAlignment="Left" Height="36" Margin="10,10,0,0"  VerticalAlignment="Top" Width="204"/>

        <Label Content="Email" FontSize="20" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="0.655,3.556"  Margin="126,73,0,0" Height="37" Width="57"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="40" Grid.Row="2" Margin="6,60,0,0"/>


        <Label Content="Engineer Experience" FontSize="20" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" RenderTransformOrigin="0.655,3.556" Margin="120,10,0,0" Height="37" Width="188"/>


        <Label Content="Cost" FontSize="20" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center" RenderTransformOrigin="0.655,3.556" Margin="120,0,0,0" Height="40" Width="76"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="204" Height="40" Grid.Row="4" Margin="5,0,0,0"/>

        <Label Content="Task" FontSize="20" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="0.655,3.556" Margin="120,35,0,0" Height="60" Width="47"/>
        <TextBox Grid.Column="1" IsReadOnly="True" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="40" Grid.Row="5" Margin="5,0,0,0"/>

        <Button Content="Add" Grid.Row="5"  HorizontalAlignment="Left" Width="100" Grid.ColumnSpan="2" Margin="300,85,0,-15" Grid.RowSpan="2" />

    </Grid>

</Window>
